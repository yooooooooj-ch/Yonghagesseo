<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddak.yongha.mapper.UsersMapper">
	<!-- 전체 유저 정보 출력 -->
	<select id="getUserAll" resultType="com.ddak.yongha.vo.UsersVO">
		SELECT * FROM users 
	</select>


	<!-- user_no로 특정유저의 정보 출력 -->
	<select id="getUserInfoByNo" resultType="com.ddak.yongha.vo.UsersVO">
		SELECT * FROM users where user_no = #{user_no}
	</select>
	
	

</mapper>